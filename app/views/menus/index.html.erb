<div class="header">
  <div class="header-main">
    <div class="D.maker">
      <%= link_to(root_path, class: 'D.maker-btn') do %>
        <%= image_tag 'logo1.png', size: '200x120', class: "D.maker-btn-icon" %>
      <% end %>
    </div>

    <div class="button">
      <div class="log-message">
      current status
        <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
      <div class="guest-user">
        <%= link_to("#", method: :post, class: 'sign_in-btn') do %>
          <%= image_tag 'user.png', size: '80x80', class: "guest-user-btn-icon" %>
        <% end %>
      </div>

      <div class="registration">
        <%= link_to(new_user_registration_path, class: 'sign_in-btn') do %>
          <%= image_tag 'new.png', size: '80x80', class: "registration-btn-icon" %>
        <% end %>
      </div>

      <div class="login">
        <%= link_to(new_user_session_path, class: 'sign_in-btn') do %>
          <%= image_tag 'login.png', size: '80x80', class: "sign_in-btn-icon" %>
        <% end %>
      </div>

      <div class="logout">
        <%= link_to(destroy_user_session_path, method: :delete, class: 'logout-btn') do %>
          <%= image_tag 'logout.png', size: '80x80', class: "logout-btn-icon" %>
        <% end %>
      </div>
    </div>

  </div>
  <div class="btn-name">
    <div class="btn-guest">
      guest
    </div>
    <div class="btn-sign-up">
      sign-up
    </div>
    <div class="btn-log-in">
      log-in 
    </div>
    <div class="btn-log-out">
      log-out
    </div>
  </div>
</div>

<div class="footer">
  <div class="three-btn">
    <div class="cook">
      <% if user_signed_in? %>
        <%= link_to(dinners_path, class: 'cook-btn') do %>
          <%= image_tag 'cook.png' , size: '100x100' ,class: "cook-btn-icon" %>
        <% end %>
      <% else %>
        <%= link_to(new_user_session_path, class: 'cook-btn') do %>
          <%= image_tag 'cook.png' , size: '100x100' ,class: "cook-btn-icon" %>
        <% end %>
      <% end %>
    </div>

    <div class="recipe">
      <% if user_signed_in? %>
        <%= link_to(new_dinner_path, class: 'recipe-btn') do %>
          <%= image_tag 'eat.png', size: '110x110', class: "recipe-btn-icon" %>
        <% end %>
      <% else %>
        <%= link_to(new_user_session_path, class: 'recipe-btn') do %>
          <%= image_tag 'eat.png', size: '110x110', class: "recipe-btn-icon" %>
        <% end %>
      <% end%>
    </div>
    
    <div class="menus">
      <% if user_signed_in? %>
        <%= link_to(new_menu_path, class: 'menus-btn') do %>
          <%= image_tag 'menus.png', size: '100x100', class: "menus-btn-icon" %>
        <% end %>
      <% else %>
        <%= link_to(new_user_session_path, class: 'menus-btn') do %>
          <%= image_tag 'menus.png', size: '100x100', class: "menus-btn-icon" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="btn-message">
    <div class="message-cook">
      cook
    </div>
    <div class="message-record">
      record
    </div>
    <div class="message-recipe">
      recipe
    </div>
  </div>
</div>

